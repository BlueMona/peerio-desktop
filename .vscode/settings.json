// Place your settings in this file to overwrite default and user settings.
{
  "search.exclude": {
    "**/node_modules": true,
    "src/static": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "dist": true,
    "app/build": true
  },
  "typescript.tsdk": "./node_modules/typescript/lib",
  "eslint.enable": true,
  "tslint.enable": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
    // TODO: re-enable when any one of the the following issues is resolved:
    // https://github.com/babel/babel-eslint/issues/573
    // https://github.com/babel/babel-eslint/issues/505
    // https://github.com/eslint/typescript-eslint-parser/issues/471
    // "typescript",
    // "typescriptreact"
  ],
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true
}
