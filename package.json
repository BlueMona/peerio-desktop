{
  "name": "peerio-2",
  "description": "Peerio 2",
  "version": "2.37.1",
  "scripts": {
    "precommit": "npm run validate",
    "postmerge": "npm update",
    "postcommit": "git fetch --prune origin '+refs/tags/*:refs/tags/*'",
    "postinstall": "electron-builder install-app-deps",
    "commitmsg": "validate-commit-msg",
    "start": "npm run compile && npm-run-all -l -p code:watch icebear:watch style:watch devstyle:watch electron:run",
    "start-latest": "git pull && npm install && npm update && npm start",
    "compile": "npm run cleanup && npm-run-all -l -n -p static:copy code:compile icebear:compile style:compile devstyle:compile react-toolbox",
    "cleanup": "rm -rf app/build && mkdirp app/build",
    "electron:run": "electron ./app",
    "static:copy": "cp -f src/*.html app/build/ && cp -R src/static app/build",
    "code:compile": "babel -q src -d app/build --ignore emojione.js",
    "icebear:compile": "babel -q node_modules/@peerio/peerio-icebear/src -d app/build/icebear",
    "code:watch": "npm run code:compile -- -w --skip-initial-build",
    "icebear:watch": "npm run icebear:compile -- -w --skip-initial-build",
    "code:lint": "eslint ./src --fix --ext .js,.jsx",
    "devstyle:compile": "node-sass src/ui/dev-tools/dev-tools-style.scss app/build/dev-tools-style.css",
    "devstyle:watch": "npm run devstyle:compile -- -w",
    "style:compile": "node-sass src/styles/main.scss app/build/style.css",
    "style:watch": "npm run style:compile -- -w",
    "style:lint": "stylefmt -r src/styles/**.scss && stylelint src/styles/**.scss && stylefmt -r src/ui/dev-tools/**/*.scss",
    "test": "npm run compile && npm run test:mocha",
    "test:mocha": "mocha test/**/*.test.js --require ./test/global-setup.js",
    "test:debug": "npm run compile && ./scripts/debug-tests.js",
    "test:prod": "npm run internal-build && NODE_ENV=production npm run test:mocha",
    "internal-build": "NODE_ENV=production npm run compile && NODE_ENV=production build --mac --windows --x64 --publish never",
    "internal-build-mac": "NODE_ENV=production npm run compile && NODE_ENV=production build --mac --x64 --publish never",
    "internal-build-linux": "NODE_ENV=production npm run compile && NODE_ENV=production build --linux --x64 --publish never",
    "build-emoji": "./scripts/build-emoji.js",
    "validate": "npm-run-all -l -n -p code:lint style:lint",
    "get-locales": "./scripts/get-locales.sh",
    "dist": "npm-run-all compile",
    "react-toolbox": "react-toolbox-themr",
    "make-icons": "sh ./icons/make.sh",
    "check-symlinks": "ls -la node_modules/@peerio/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeerioTechnologies/peerio-desktop.git"
  },
  "author": "Technologies Peerio Inc. <support@peerio.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PeerioTechnologies/peerio-desktop/issues"
  },
  "homepage": "https://github.com/PeerioTechnologies/peerio-desktop#readme",
  "devDependencies": {
    "@peerio/desktop-release-builder": "4.0.0",
    "@peerio/peerio-icebear": "2.8.0",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.0.0",
    "babel-plugin-console-kungfu": "git+https://github.com/PeerioTechnologies/babel-plugin-console-kungfu.git",
    "babel-plugin-syntax-jsx": "6.18.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-plugin-transform-inline-environment-variables": "6.8.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-display-name": "6.25.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-plugin-transform-react-jsx-self": "6.22.0",
    "babel-plugin-transform-react-jsx-source": "6.22.0",
    "babel-plugin-transform-remove-debugger": "6.8.5",
    "babel-root-import": "4.1.8",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "cz-conventional-changelog": "2.0.0",
    "devtron": "1.4.0",
    "diff2html-cli": "2.5.0",
    "electron": "1.7.6",
    "electron-builder": "19.24.1",
    "electron-devtools-installer": "2.2.0",
    "electron-reload": "1.2.1",
    "emojione": "3.1.2",
    "emojione-assets": "3.1.1",
    "eslint-config-peerio": "1.19.11",
    "husky": "0.14.3",
    "mkdirp": "0.5.1",
    "mobx-react-devtools": "4.2.15",
    "mocha": "3.5.3",
    "node-sass": "4.5.3",
    "npm-run-all": "4.1.1",
    "peerio-copy": "git+https://github.com/PeerioTechnologies/peerio-copy.git#icebear",
    "react-addons-perf": "15.4.2",
    "react-toolbox-themr": "git+https://github.com/react-toolbox/react-toolbox-themr.git",
    "spectron": "3.7.2",
    "standard-version": "git+https://github.com/PeerioTechnologies/standard-version.git",
    "stylefmt": "6.0.0",
    "stylelint": "8.1.1",
    "stylelint-config-standard": "17.0.0",
    "stylelint-order": "0.6.0",
    "stylelint-scss": "2.1.0",
    "validate-commit-msg": "2.14.0",
    "writefile": "0.2.8"
  },
  "reactToolbox": {
    "customProperties": {
      "color-primary": "rgb(44, 149, 207)",
      "color-primary-dark": "var(--palette-indigo-700)",
      "color-primary-light": "var(--palette-indigo-500)",
      "color-accent": "rgb(246, 146, 35)",
      "color-accent-dark": "var(--palette-pink-700)",
      "color-primary-contrast": "var(--color-dark-contrast)",
      "color-accent-contrast": "var(--color-dark-contrast)",
      "animation-duration": "0.3s"
    },
    "path": "app/node_modules/react-toolbox/lib",
    "output": "./app/build/react-toolbox",
    "fixed": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "core"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 120,
      "subjectPattern": ".+",
      "helpMessage": "Convention: https://github.com/bcoe/conventional-changelog-standard/blob/master/convention.md"
    }
  },
  "build": {
    "appId": "com.peerio.desktop",
    "productName": "Peerio 2",
    "artifactName": "${productName}-${arch}-${version}.${ext}",
    "npmSkipBuildFromSource": true,
    "directories": {
      "buildResources": "dist-assets"
    },
    "files": [
      "**",
      "!node_modules/cssman${/*}",
      "!node_modules/material-design-icons${/*}",
      "node_modules/material-design-icons/iconfont/*",
      "!node_modules/@peerio/peerio-icebear${/*}",
      "!node_modules/react-toolbox${/*}",
      "!node_modules/buffer/bin${/*}",
      "node_modules/react-toolbox/lib/**/{*.js,*.json,*.css}",
      "node_modules/react-toolbox/package.json",
      "!node_modules/**/{example,examples,demo,demos,test,tests,__test?__,.vscode}${/*}",
      "!node_modules/**/{*.md,*.markdown,*.ts,*.flow,*.html,*.htm,*.map,*.test.js,*.watchr,*.coffee}",
      "!node_modules/**/{LICENSE,license,LICENSE.*,LICENSE-MIT,LICENSE-MIT.*,LICENCE,PATENTS,COPYING.txt}",
      "!node_modules/**/{bower.json,?runtfile.js,?ulpfile.js,?akefile}",
      "!node_modules/**/{.npmignore,.eslintrc,.eslintrc.js,.jshintrc,.babelrc,karma.conf.js,.jsfmtrc}",
      "!node_modules/**/{example.js,Gruntfile.ls,build.ls,.coveralls.yml,.zuul.yml,component.json}"
    ],
    "asar": true,
    "compression": "normal",
    "publish": [
      "github"
    ],
    "squirrelWindows": {
      "msi": true
    },
    "win": {
      "publisherName": "Peerio Technologies Inc.",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "${name}-setup-${version}.${ext}",
      "installerIcon": "dist-assets/win-installer.ico"
    },
    "mac": {
      "artifactName": "${name}-${version}-mac.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "dist-assets/dmg-icon.icns",
      "title": "${productName} ${version}",
      "window": {
        "x": 200,
        "y": 160,
        "width": 400,
        "height": 260
      },
      "contents": [
        {
          "x": 160,
          "y": 170
        },
        {
          "x": 300,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Network",
      "artifactName": "${name}-${os}-x86_64.${ext}",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "appImage": {
      "artifactName": "${name}-${os}-x86_64.${ext}"
    }
  },
  "standard-version": {
    "skip": {
      "changelog": true
    }
  }
}
