{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "target": "esnext",
    "noImplicitThis": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "paths": {
      "~/*": [
        "./*"
      ],
      "~/icebear": [
        "../app/node_modules/peerio-icebear/src"
      ],
      "*": [
        "*",
        "../app/node_modules/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "docs",
    "dist-assets",
    "icons",
    "scripts",
    "dist",
    "test",
    "app"
  ]
}
