{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "~/icebear": ["../node_modules/@peerio/peerio-icebear/src"],
      "*": ["*", "../app/node_modules/*"]
    }
  },
  "exclude": [
    "node_modules",
    "docs",
    "dist-assets",
    "icons",
    "scripts",
    "dist",
    "test",
    "app"
  ]
}
