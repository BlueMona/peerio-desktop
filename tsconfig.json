{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "target": "esnext",
    "noImplicitThis": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false, // FIXME: remove
    "strictNullChecks": false, // FIXME: remove
    "paths": {
      "~/*": ["./*"],
      "*": ["*", "../app/node_modules/*"],
      // Since desktop app uses self-compiled sdk from node_modules/peerio-icebear/dist
      // and main file of the sdk is /dist/index.js,
      // we give a hint to typescript where to look for sources.
      "peerio-icebear": ["../app/node_modules/peerio-icebear/src"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["src/static", "src/styles", "node_modules", "app/node_modules"]
}
